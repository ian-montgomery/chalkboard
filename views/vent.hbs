<div class="container">

  <h1 class="board-heading blackboard">A place to vent! (no swear words ;))</h1>
  <p class="board-desc">Add a new comment at the bottom of the Chalkboard. Click a comment to edit.</p>
  <div class="blackboard-grid">
    
    {{#each vent}}
    <div class="comment-card">
     <h3><a href="/vent/edit/{{id}}">{{comment}}</a></h3>
      <p>{{author}}</p>
      <a href="/vent/{{id}}/delete"> dust!</a>
    </div>
    {{/each}}
   
  </div>
  
</div>

<div class="new-comment-card">

  <form action="/vent" method="POST">
    <textarea name="comment" id="" cols="10" rows="5" placeholder="Write to the chalkboard!"></textarea>
    <!-- took out a author value from the input below -->
    <input type="text" name="author" placeholder="Author">
    <input type="submit">
  </form>

</div>

{{>footer}}